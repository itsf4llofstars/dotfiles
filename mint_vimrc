": VIMRC

": FUNCTION
function GetLine()
  if line("'\"") > 1 && line("'\"") <= line("$") | exec "normal g'\"" | endif
endfunction

function ShowWhitespace()
  match ErrorMsg '\s\+$'
endfunction

function Indent()
  let l:view = winsaveview()
  :normal! gg=G
  call winrestview(l:view)
  " :normal! mpHmogg=G'ozt`p
endfunction

function DeleteWs() abort
  normal mz
  %s/\v\s+$//ge
  normal `z
endfunc

