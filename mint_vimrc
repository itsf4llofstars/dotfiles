function WriteDate()
  let l:view = winsaveview()
  :r!date
  normal! kdd
  execute "normal I\": Change:\<Space>\<Esc>"
  call winrestview(l:view)
endfunction

function GetLine()
  if line("'\"") > 1 && line("'\"") <= line("$")
    exe "normal! g'\""
  endif
endfunction

function Indent()
  let l:view = winsaveview()
  normal! gg=G
  call winrestview(l:view)
endfunction

function Whitespace()
  let l:view = winsaveview()
  :%s/\s\+$//e
  call winrestview(l:view)
endfunction

