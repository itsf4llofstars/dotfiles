# Bash Aliases

# ls
alias ls='ls --color=auto --group-directories-first --quoting-style=shell'
alias lx='ls -lhgGAF --color=auto --group-directories-first --quoting-style=shell'
alias la='ls -A --color=auto --group-directories-first --quoting-style=shell'
alias ll='ls -1 --color=auto --group-directories-first --quoting-style=shell'
alias lh='ls -lh --color=auto --group-directories-first --quoting-style=shell'
alias ld='ls -d .[!.]* --color=auto --group-directories-first --quoting-style=shell'

# Linux
alias srn='sudo reboot'
alias ssn='sudo shutdown now'
alias ..='cd ../'
alias ...='cd ../../'
alias ....='cd ../../../'
alias path='echo $PATH | tr -s ":" "\n"'
alias df='df -h /'
alias sob='exec bash'
alias tree='tree --dirsfirst -F'
alias pw='pwd'
alias ex='exit'

# Editors
alias nv='nvim'
alias vi='vim'
alias nvimrc='nvim ~/.config/nvim/init.vim'
alias vimrc='vim ~/.vimrc'
alias nconf='cd ~/.config/nvim/'
alias ed='ed -E -v -p "ed: "'
alias nano='nano --guidestripe=80 -r 79'
alias mu='micro'

# Python
alias mm='python3 main.py'
alias py='python3'
alias act='source venv/bin/activate'
alias dact='deactivate'
alias pylint='pylint --rcfile=~/python/pylint.conf'
alias pgd='python3 ~/python/cs50_web-dev/py_gui.py'

# Rust
alias cr='clear && cargo run'
alias cb='clear && cargo build'
alias cc='clear && cargo check'

# GIT
alias gll='clear && git log --oneline --decorate --graph --all'
alias gl='clear && git log --decorate --all'
alias glo='clear && git log --oneline --decorate --all'
alias gst='clear && git status'
alias gss='clear && git status -s'
alias gbr='clear && git branch'
alias gffs='git flow feature start'
alias gfff='git flow feature finish'
